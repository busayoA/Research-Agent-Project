# AI Research Assistant Environment Variables

# API Keys
MISTRAL_API_KEY=your_mistral_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Provider Selection (options: "mistral" or "openai")
AI_PROVIDER=openai

# Model Selection
# Mistral models: mistral-small-latest, mistral-medium-latest, mistral-large-latest
# OpenAI models: gpt-3.5-turbo, gpt-4-turbo, gpt-4o, etc.
MISTRAL_MODEL=mistral-small
OPENAI_MODEL=gpt-3.5-turbo

# Configuration
TEMPERATURE=0.7
MAX_TOKENS=1500

# Search settings
SEARCH_RESULT_LIMIT=2